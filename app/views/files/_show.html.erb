<div id="actionbar" class="span12">
   <div id="crumbs">
     <%=link_to "Home", '/'%>
     &nbsp;--&gt;&nbsp;
     <%=  link_to  "Topics", '/topics'%>
     &nbsp;--&gt;&nbsp;
     <%=  link_to  @uploadedfile.topic_name, '/topics/'+@uploadedfile.topic.url%>
     &nbsp;--&gt;&nbsp;
     <b><%= @uploadedfile.title %></b>
   </div>
   <div id="controls">
       <% if current_user and (current_user.is_admin or @uploadedfile.created_by_id==current_user.id) %>
            <%=  link_to "Edit File", '/files/'+@uploadedfile.id.to_s+'/edit', class: "btn btn-small btn-primary"%>
            <%=  link_to "Delete File", '/files/'+@uploadedfile.id.to_s+'/delete', confirm: "Delete file: Are you sure?", class: "btn btn-small btn-primary"%>

       <% end %>
       <%=  link_to "Index", "/topics/"+@uploadedfile.topic.url, class: "btn btn-small btn-primary"%>
   </div>
</div>


<div id="left_panel">
   <%=render 'layouts/left_panel'%>
</div>
<div id="right_panel">


<div id="right_scroll">
   <%= render 'flash' %>
  <%= render 'file_details' %>
<div class="erow">
   <div class="hrline">
      <hr noshade size="4">
   </div>
</div>
</div>
</div>
