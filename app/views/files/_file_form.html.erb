<div class="fullform">
   <%= form_for @uploadedfile, remote: true, :html => {:name => 'hutform'} do |f| %>
    <%= render 'shared/error_messages' %>
    <div id="right_scroll">

      <div class="erow">
         <div class="sectiontitle25">Filename:</div>
      </div>
      <%= f.file_field :image %>
      <%= f.hidden_field :post_id %>

          <%= f.submit @submit_button, class: "btn btn-small btn-primary btn-hightlight" %>
    </div>
  <% end %>
</div>
