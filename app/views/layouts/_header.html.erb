        <div id="our_logo">
          <%= link_to "QRP.NZ", root_path, id: "logo"%>
        </div>
          <nav>
            <ul class="nav pull-right" id="menus">
                <li><%= link_to 'Home', root_path%></li>
                <li><%= link_to 'About', '/about' %></li>
                <li><%= link_to '...OnTheAir', 'http://ontheair.nz' %></li>
<!-- <li>< % = link_to 'GO-QRP', 'http://qrp.nz/goqrp' %></li> -->


              <li><%= link_to "Topics", '/topics' %></li>
              <li><%= link_to "Contests", '/contest_series' %></li>
              <% if signed_in? %>
               <li><%= link_to "Users", '/users' %></li>
               <% if current_user.is_admin %>
                <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                     Admin <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                  </ul>
                </li>
               <% end %>
                     
               <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <% mail="" %>
                    <% Rails.logger.info "*************************** MAILUSER *************" %>
                  <% if current_user.mailuser and current_user.mailuser.length>0 then %>
                    <% #cmd='/usr/bin/mailx -e -u '+current_user.mailuser %>
                    <% cmd='/bin/ls /home/'+current_user.mailuser+'/Maildir/new' %>
                    <% #result=system(cmd) %>
                    <% result=`#{cmd}` %>
                    <% Rails.logger.info cmd %>
                    <% Rails.logger.info result %>
                    <% if result and result.length>0 then mail="*" end %>
                  <% end %>
                   <b><%=current_user.callsign.upcase+mail%></b> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">

                  <li><%= link_to "Profile", '/users/'+current_user.callsign %></li>
                  <% if current_user.mailuser and current_user.mailuser.length>0 then %>
                    <li><%= link_to "Mail"+mail, '/mail' %></li>
                  <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
               </li>
              <% else %>
                <li><%= link_to "Sign in", signin_path %></li>
                <li><%= link_to "Sign up", signup_path %></li>
              <% end %>
            </ul>
          </nav>
