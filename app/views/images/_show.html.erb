<div id="actionbar" class="span12">
   <div id="crumbs">
     <%=link_to "Home", '/'%>
     &nbsp;--&gt;&nbsp;
     <%=  link_to  "Topics", '/topics'%>
     &nbsp;--&gt;&nbsp;
     <%=  link_to  @image.topic_name, '/topics/'+@image.topic.url%>
     &nbsp;--&gt;&nbsp;
     <b><%= @image.title %></b>
   </div>
   <div id="controls">
       <% if current_user and (current_user.is_admin or @image.created_by_id==current_user.id) %>
            <%=  link_to "Edit Image", '/images/'+@image.id.to_s+'/edit', class: "btn btn-small btn-primary"%>
            <%=  link_to "Delete Image", '/images/'+@image.id.to_s+'/delete', confirm: "Delete image: Are you sure?", class: "btn btn-small btn-primary"%>
       <% end %>
       <%=  link_to "Index", "/topics/"+@image.topic.url, class: "btn btn-small btn-primary"%>
   </div>
</div>


<div id="left_panel">
   <%=render 'layouts/left_panel'%>
</div>
<div id="right_panel">


<div id="right_scroll">
   <%= render 'flash' %>
  <%= render 'image_details' %>
<div class="erow">
   <div class="hrline">
      <hr noshade size="4">
   </div>
</div>
</div>
</div>
